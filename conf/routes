# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.HomeController.index
GET     /signin                     controllers.HomeController.signin
GET     /signup                     controllers.HomeController.signup
GET     /signout                    controllers.HomeController.signout
GET     /callback                   controllers.HomeController.callback(code: String ?=null, scope: String ?=null, state: String ?=null)

GET     /api/emails/status          controllers.ApiEmailController.status
GET     /api/emails                 controllers.ApiEmailController.list(folder: String ?=null)
GET     /api/emails/:id             controllers.ApiEmailController.show(id: String)
PATCH   /api/emails/:id             controllers.ApiEmailController.update(id: String)

GET     /api/users/:id              controllers.ApiUserController.show(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
