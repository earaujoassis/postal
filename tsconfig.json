{
  "compilerOptions": {
    "outDir": "./public/javascripts/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./web/**/*"
  ],
  "paths": {
    "@/*": [
      "./web/*"
    ]
  },
  "compileOnSave": false
}
